<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="25dp"
                android:text="@string/contact_information_sign_up"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/mainText"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/firstType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumberEditText" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_field_background"
                android:ems="10"
                android:hint="@string/email_sign_up"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surnameEditText" />

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="326dp"
                android:layout_height="51dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/round_button"
                android:text="@string/sign_up_button"
                android:textColor="@color/textWithDarkBackground"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/secondInfoEditText"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/text_field_background"
                android:ems="10"
                android:hint="@string/info2_sign_up"
                android:inputType="textPersonName"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/sign_up_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondType" />

            <EditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:background="@drawable/text_field_background"
                android:ems="10"
                android:hint="@string/phone_number_sign_up"
                android:inputType="phone"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_field_background"
                android:ems="10"
                android:hint="@string/name_sign_up"
                android:inputType="textPersonName"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/surnameEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_image"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/surnameEditText"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_field_background"
                android:ems="10"
                android:hint="@string/surname_sign_up"
                android:inputType="textPersonName"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/emailEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameEditText" />

            <EditText
                android:id="@+id/firstInfoEditText"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/text_field_background"
                android:ems="10"
                android:hint="@string/info_sign_up"
                android:inputType="textPersonName"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/secondType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstType" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="169dp"
                android:layout_height="147dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/logo_png"
                app:layout_constraintBottom_toTopOf="@+id/nameEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/firstType"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/firstInfoEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_field_background"
                android:ems="10"
                android:hint="@string/password_sign_up"
                android:inputType="textPassword"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/phoneNumberEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

            <Spinner
                android:id="@+id/secondType"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"

                android:ems="10"
                android:paddingHorizontal="21dp"
                android:textColor="@color/subText"
                app:layout_constraintBottom_toTopOf="@+id/secondInfoEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstInfoEditText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>