<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.eino">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.UsersActivity"></activity>
        <activity android:name=".controllers.SubCategoryActivity" />
        <activity
            android:name=".controllers.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.noActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".controllers.UserProfileActivity"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".controllers.fragments.CategoryFragment"
            android:label="Categories"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controllers.SignupActivity"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".controllers.LogInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.noActionBar"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>